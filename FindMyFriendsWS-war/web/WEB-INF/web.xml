<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>FindMyFriendsWS</display-name>
    <servlet>
        <servlet-name>Jersey REST Service</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>com.fmf.jersey</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey REST Service</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    <ejb-local-ref>
        <ejb-ref-name>LieuFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>sessions.LieuFacadeLocal</local>
        <ejb-link>FindMyFriendsWS-ejb.jar#LieuFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>PersonneFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>sessions.PersonneFacadeLocal</local>
        <ejb-link>FindMyFriendsWS-ejb.jar#PersonneFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>PersonneFacade1</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>sessions.PersonneFacadeLocal</local>
        <ejb-link>FindMyFriendsWS-ejb.jar#PersonneFacade</ejb-link>
    </ejb-local-ref>
</web-app>
